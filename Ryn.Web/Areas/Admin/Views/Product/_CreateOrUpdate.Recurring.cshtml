@model ProductModel
@using Ryn.Core.Domain.Catalog;
@using Ryn.Services

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-label asp-for="IsRecurring" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="IsRecurring" />
            <span asp-validation-for="IsRecurring"></span>
        </div>
    </div>
    <ryn-nested-setting asp-for="IsRecurring">
        <div class="form-group row">
            <div class="col-md-3">
                <ryn-label asp-for="RecurringCycleLength" />
            </div>
            <div class="col-md-9">
                <ryn-editor asp-for="RecurringCycleLength" />
                <span asp-validation-for="RecurringCycleLength"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <ryn-label asp-for="RecurringCyclePeriodId" />
            </div>
            <div class="col-md-9">
                <ryn-select asp-for="RecurringCyclePeriodId" asp-items="@await (((RecurringProductCyclePeriod)Model.RecurringCyclePeriodId).ToSelectListAsync())" />
                <span asp-validation-for="RecurringCyclePeriodId"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <ryn-label asp-for="RecurringTotalCycles" />
            </div>
            <div class="col-md-9">
                <ryn-editor asp-for="RecurringTotalCycles" />
                <span asp-validation-for="RecurringTotalCycles"></span>
            </div>
        </div>
    </ryn-nested-setting>
</div>