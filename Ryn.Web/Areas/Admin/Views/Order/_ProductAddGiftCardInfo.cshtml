@model AddProductToOrderModel.GiftCardModel

@if (Model.IsGiftCard)
{
    //Actually just a copy of \Presentation\Ryn.Web\Views\Catalog\_GiftCardInfo.cshtml
    <div class="card card-default">
        <div class="card-body">
            <div class="form-group row">
                <div class="col-md-3">
                    <div class="label-wrapper">
                        <label class="col-form-label">@T("Admin.GiftCards.Fields.RecipientName")</label>
                        <div class="ico-help" title="@T("Admin.GiftCards.Fields.RecipientName.Hint")">
                            <i class="fas fa-question-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-required">
                        <ryn-editor asp-for="RecipientName" />
                        <div class="input-group-btn">
                            <ryn-required />
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.GiftCardType == Ryn.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group row">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            <label class="col-form-label">@T("Admin.GiftCards.Fields.RecipientEmail")</label>
                            <div class="ico-help" title="@T("Admin.GiftCards.Fields.RecipientEmail.Hint")">
                                <i class="fas fa-question-circle"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group input-group-required">
                            <ryn-editor asp-for="RecipientEmail" />
                            <div class="input-group-btn">
                                <ryn-required />
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group row">
                <div class="col-md-3">
                    <div class="label-wrapper">
                        <label class="col-form-label">@T("Admin.GiftCards.Fields.SenderName")</label>
                        <div class="ico-help" title="@T("Admin.GiftCards.Fields.SenderName.Hint")">
                            <i class="fas fa-question-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-required">
                        <ryn-editor asp-for="SenderName" />
                        <div class="input-group-btn">
                            <ryn-required />
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.GiftCardType == Ryn.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group row">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            <label class="col-form-label">@T("Admin.GiftCards.Fields.SenderEmail")</label>
                            <div class="ico-help" title="@T("Admin.GiftCards.Fields.SenderEmail.Hint")">
                                <i class="fas fa-question-circle"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group input-group-required">
                            <ryn-editor asp-for="SenderEmail" />
                            <div class="input-group-btn">
                                <ryn-required />
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group row">
                <div class="col-md-3">
                    <ryn-label asp-for="Message" />
                </div>
                <div class="col-md-6">
                    <ryn-textarea asp-for="Message" />
                </div>
            </div>
        </div>
    </div>
}