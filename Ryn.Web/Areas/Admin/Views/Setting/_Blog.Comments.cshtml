@model BlogSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-override-store-checkbox asp-for="AllowNotRegisteredUsersToLeaveComments_OverrideForStore" asp-input="AllowNotRegisteredUsersToLeaveComments" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <ryn-label asp-for="AllowNotRegisteredUsersToLeaveComments" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="AllowNotRegisteredUsersToLeaveComments" />
            <span asp-validation-for="AllowNotRegisteredUsersToLeaveComments"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-override-store-checkbox asp-for="BlogCommentsMustBeApproved_OverrideForStore" asp-input="BlogCommentsMustBeApproved" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <ryn-label asp-for="BlogCommentsMustBeApproved" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="BlogCommentsMustBeApproved" />
            <span asp-validation-for="BlogCommentsMustBeApproved"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-override-store-checkbox asp-for="NotifyAboutNewBlogComments_OverrideForStore" asp-input="NotifyAboutNewBlogComments" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <ryn-label asp-for="NotifyAboutNewBlogComments" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="NotifyAboutNewBlogComments" />
            <span asp-validation-for="NotifyAboutNewBlogComments"></span>
        </div>
    </div>
    <div class="form-group row advanced-setting">
        <div class="col-md-3">
            <ryn-label asp-for="ShowBlogCommentsPerStore" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="ShowBlogCommentsPerStore" />
            <span asp-validation-for="ShowBlogCommentsPerStore"></span>
        </div>
    </div>
</div>