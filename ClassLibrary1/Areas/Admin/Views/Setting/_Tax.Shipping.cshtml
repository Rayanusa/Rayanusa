@model TaxSettingsModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-override-store-checkbox asp-for="ShippingIsTaxable_OverrideForStore" asp-input="ShippingIsTaxable" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <ryn-label asp-for="ShippingIsTaxable" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="ShippingIsTaxable" />
            <span asp-validation-for="ShippingIsTaxable"></span>
        </div>
    </div>
    <ryn-nested-setting asp-for="ShippingIsTaxable">
        <div class="form-group row">
            <div class="col-md-3">
                <ryn-override-store-checkbox asp-for="ShippingPriceIncludesTax_OverrideForStore" asp-input="ShippingPriceIncludesTax" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <ryn-label asp-for="ShippingPriceIncludesTax" />
            </div>
            <div class="col-md-9">
                <ryn-editor asp-for="ShippingPriceIncludesTax" />
                <span asp-validation-for="ShippingPriceIncludesTax"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <ryn-override-store-checkbox asp-for="ShippingTaxClassId_OverrideForStore" asp-input="ShippingTaxClassId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <ryn-label asp-for="ShippingTaxClassId" />
            </div>
            <div class="col-md-9">
                <ryn-select asp-for="ShippingTaxClassId" asp-items="Model.TaxCategories" />
                <span asp-validation-for="ShippingTaxClassId"></span>
            </div>
        </div>
    </ryn-nested-setting>
</div>