@model BlogPostModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-label asp-for="SeName" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="SeName" />
            <span asp-validation-for="SeName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-label asp-for="MetaTitle" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="MetaTitle" />
            <span asp-validation-for="MetaTitle"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-label asp-for="MetaKeywords" />
        </div>
        <div class="col-md-9">
            <ryn-editor asp-for="MetaKeywords" />
            <span asp-validation-for="MetaKeywords"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <ryn-label asp-for="MetaDescription" />
        </div>
        <div class="col-md-9">
            <ryn-textarea asp-for="MetaDescription"></ryn-textarea>
            <span asp-validation-for="MetaDescription"></span>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#@Html.IdFor(model => model.SeName)').on('input change', function () {
                var parameters = {
                    entityId: '@Model.Id',
                    entityName: 'BlogPost',
                    seName: $(this).val()
                };
                warningValidation('@Url.Action("UrlReservedWarning", "Common")', '@Html.NameFor(model => model.SeName)', parameters);
            });
        });
    </script>
</div>
